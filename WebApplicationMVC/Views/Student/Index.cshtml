@model IEnumerable<WebApplicationMVC.Models.Student>

@{
    ViewBag.Title = "Index";
    if ((string)Session["role"] != "admin")
    {
        Response.Redirect("~/Home/Index");
    }
}

<h2>Studenti</h2>

<p>
    @Html.ActionLink("Dodaj novog studenta", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BrIndeksa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BrIndeksa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prezime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grad)
        </td>
        <td>
            @Html.ActionLink("Izmeni", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Obrisi", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
