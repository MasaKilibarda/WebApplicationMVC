@model IEnumerable<WebApplicationMVC.Models.Ispit>

@{
    ViewBag.Title = "Index";
    if ((string)Session["role"] != "salter")
    {
        Response.Redirect("~/Home/Index");
    }
}

<h2>Ispiti</h2>

<p>
    @Html.ActionLink("Dodaj novi ispit", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PredmetId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ocena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatumPolaganja)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PredmetId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ocena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatumPolaganja)
        </td>
        <td>
            @Html.ActionLink("Izmeni", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Obrisi", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
